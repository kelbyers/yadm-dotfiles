# vim: ft=gitconfig
[difftool "sourcetree"]
	cmd = /usr/local/bin/bcomp \"$LOCAL\" \"$REMOTE\"
	path = -ro
[mergetool "sourcetree"]
	cmd = /usr/local/bin/bcomp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	trustExitCode = true
[diff]
	tool = bc4
[merge]
	tool = bc4
[mergetool "bc4"]
	trustExitCode = true
[credential]
	helper = osxkeychain
