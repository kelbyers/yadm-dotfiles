# vim: ft=gitconfig
[difftool "sourcetree"]
	cmd = /opt/homebrew/bin/bcomp \"$LOCAL\" \"$REMOTE\"
	path = -ro
[mergetool "sourcetree"]
	cmd = /opt/homebrew/bin/bcomp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	trustExitCode = true
[diff]
	tool = bc4
[merge]
	tool = bc4
[mergetool "bc4"]
	trustExitCode = true
[credential]
	helper = osxkeychain
[credentials]
	helper = osxkeychain
[git-town]
	push-new-branches = true
