[alias]
	append = town append
	hack = town hack
	kill = town kill
	new-pull-request = town new-pull-request
	prepend = town prepend
	prune-branches = town prune-branches
	rename-branch = town rename-branch
	repo = town repo
	ship = town ship
	sync = town sync
[core]
	excludesfile = ~/.gitignore_global
[commit]
	template = ~/.stCommitMsg
[git-town]
	new-branch-push-flag = true
[diff]
	tool = bc3
[merge]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true
[include]
	path = .gitconfig.user
	path = .gitconfig.local
